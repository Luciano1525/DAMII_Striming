<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/netwix" />

    <View
        android:id="@+id/vseparador2"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_margin="5sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvUsuarioRe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/NombreU"
        android:textColor="@color/Negro"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etRegistroU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="24sp"
        android:inputType="text"
        android:hint="@string/NombreUE"
        android:textColor="@color/Negro"
        />

    <View
        android:id="@+id/vseparador1"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_margin="5sp"
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/spnTipoPerfil"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:entries="@array/TipoPerfil"
        android:textColor="@color/Negro"
        android:textSize="35sp"
        android:textStyle="bold" />




</LinearLayout>